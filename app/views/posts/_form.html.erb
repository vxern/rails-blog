<%= form_with model: post, method: method do |form| %>
  <div>
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :body %>
    <%= form.text_area :body %>
  </div>

  <% if form.object.errors.any? %>
    <div>
      <% form.object.errors.full_messages.each do |message|  %>
        <div><%= message %></div>
      <% end %>
    </div>
  <% end %>

  <%= form.submit %>
<% end %>
